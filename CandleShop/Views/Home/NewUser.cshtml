@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/CSS/AutoForm.css" rel="stylesheet" type="text/css" />
    <title></title>
</head>
<body>
    <div class="topnav">
        @if ((int)(int)Session["idUser"] >= 2 || (int)(int)Session["idUser"] == 0)
        {
            <a  href=@Url.Action("Main","Home")>Главная</a>
            <a href=@Url.Action("UserCost","Home")>Корзина</a>
            <a href=@Url.Action("Login","Home")>Авторизация</a>
            <a class="active" href=@Url.Action("NewUser","Home")>Регистрация</a>
        }
        @if ((int)Session["idUser"] <= 2 && (int)Session["idUser"] != 0)
        {
            <a href=@Url.Action("Products","Admin")>Изменить товары</a>
            <a href=@Url.Action("Orders","Admin")>Заказы</a>
        }
    </div>
    <div id=" login">
        
        @*@Session["Status_Cost"] = 0;*@


        @if ((int)Session["NewUser"] == 1)
        {
            <p typeof="answer">Такой пользователь уже есть!</p>
        }
        <form enctype="multipart/form-data" action="/Home/NewUser" id="registerform" method="post" class="box">
            <h1>Регистрация</h1>
            <p>
                <input required class="input" id="full_name" name="full_name" size="32" type="text" value="" placeholder="Имя"/>
            </p>
            <p>
                <input required class="input" id="full_name" name="first_name" size="32" type="text" value="" placeholder="Фамилия"/>
            </p>
            <p>
                <input required class="input" id="username" name="username" size="20" type="text" value="" placeholder="Логин"/>
            </p>
            <p>
                <input required class="input" id="passwofd" name="password" size="32" type="password" value="" placeholder="Пароль"/>
            </p>
            <p>
                <input required class="input" id="email" name="email" size="32" type="email" value="" placeholder="Email"/>
            </p>
            <p>
                <input required class="input" id="full_name" name="telephon" size="50" type="text" value="" placeholder="Телефон +380..."/>
            </p>
            <p class="submit"><input class="button" id="register" name="register" type="submit" value="Зарегестрироваться" /></p>
            <p class="regtext"type="text">Уже зарегестрированы?<a href="@Url.Action("Login", "Home")">Введите имя пользователя</a></p>
        </form>
    </div>
</body>
</html>
